<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TwoPlayerGameFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="3"
        android:padding="16dp">

        <!-- Define the layout for each cell in the game board -->
        <!-- You can use any view to represent a cell (e.g., Button, ImageView, etc.) -->
        <Button
            android:id="@+id/cell_0_0"
            style="@style/GameCell"/>

        <!-- Define other cells similarly -->
        <!-- For example: -->
        <!-- <Button
            android:id="@+id/cell_0_1"
            style="@style/GameCell"/> -->

    </GridLayout>

</FrameLayout>
